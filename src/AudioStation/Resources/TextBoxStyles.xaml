<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBox" x:Key="UserInputTextBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#FF555555" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="3" />
    </Style>

    <Style TargetType="PasswordBox" x:Key="UserInputPasswordBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#FF555555" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="3" />
    </Style>

    <Style TargetType="TextBox" x:Key="UserInputTextBoxReadonly">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="Focusable" Value="False" />
    </Style>

    <Style TargetType="TextBox" x:Key="LargeInputLabelTextBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="2" />
    </Style>
</ResourceDictionary>