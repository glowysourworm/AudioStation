<UserControl x:Class="AudioStation.Controls.PropertyGrid.PropertyStringEnumerableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:system="clr-namespace:System;assembly=System"
             xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:AudioStation.Controls"
             Style="{StaticResource PropertyGridUserControl}">             
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding LabelColumnWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
				       Style="{StaticResource PropertyGridLabel}" />

            <Button fa5:Awesome.Content="Solid_Plus" 
                    Visibility="{Binding IsReadOnly, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolInverseVisibilityCollapseConverter}}"
                    Style="{StaticResource SmallControlButton}" 
                    Grid.Column="1" />

        </Grid>

        <Border Grid.Column="1" Grid.RowSpan="2" BorderBrush="LightGray" BorderThickness="1">
            <ItemsControl ItemsSource="{Binding Path=Value, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <xceed:WatermarkTextBox Text="{Binding Path=.}" 
                                                    Watermark="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    IsReadOnly="{Binding IsReadOnly, RelativeSource={RelativeSource AncestorType=UserControl}}" />

                            <Button fa5:Awesome.Content="Solid_Minus" 
                                    Visibility="{Binding IsReadOnly, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolInverseVisibilityCollapseConverter}}"
                                    Style="{StaticResource SmallControlButton}" 
                                    Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

    </Grid>
</UserControl>
