<Window x:Class="AudioStation.Windows.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        BorderThickness="0"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        WindowStyle="None">

    <!-- See IDialog Controller -->
    <Border x:Name="LoadingContainer" 
            Opacity="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="10"
            Background="White" 
            BorderBrush="Gray" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding DialogTitle}" FontSize="18" Foreground="Gray" Margin="10" HorizontalAlignment="Center" />

            <ContentPresenter Content="{Binding}" Grid.Row="1" />

            <StackPanel x:Name="ButtonPanel"
                        Orientation="Horizontal" 
                        Grid.Row="2" 
                        HorizontalAlignment="Right" 
                        Margin="5">
                
                <Button x:Name="OkButton" Click="OkButton_Click" Style="{StaticResource UserControlButton}" Content="OK" Padding="5" Width="60" />
                
            </StackPanel>
        </Grid>
                      
    </Border>
    
</Window>
