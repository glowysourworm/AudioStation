<UserControl x:Class="AudioStation.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:fa5="http://schemas.fontawesome.com/icons/"
			 xmlns:local="clr-namespace:AudioStation.Views"
			 xmlns:controls="clr-namespace:AudioStation.Controls">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Menu HorizontalAlignment="Left">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Library" />
                <MenuItem Header="_Save Library" />
            </MenuItem>

            <MenuItem Header="_View">
                <MenuItem Header="_Output Messages" Click="OnShowOutputMessagesClick">
                    <MenuItem.Icon>
                        <fa5:SvgAwesome Icon="Solid_Check" Width="12" Height="12" Foreground="Gray"
                                        Visibility="{Binding ShowOutputMessages, Converter={StaticResource BoolVisibilityCollapseConverter}}" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            
        </Menu>

        <!-- Primary Tab Views -->
        <TabControl TabStripPlacement="Left" Grid.Row="1">


            <TabItem FontSize="14" Margin="0" Header="Configuration">
                <local:ConfigurationView x:Name="ConfigurationView" DataContext="{Binding Configuration}" />
            </TabItem>

            <TabItem FontSize="14" Margin="0" Header="Library Manager">
                <local:ManagerView x:Name="ManagerView" DataContext="{Binding Library}" />
            </TabItem>

            <TabItem FontSize="14" Margin="0" Header="Now Playing">
                <local:NowPlayingView x:Name="NowPlayingView" />
            </TabItem>


        </TabControl>

        <!-- Playlist Controller (Panel) (Bound to MainViewModel -> (Playlist)) -->
        <Border x:Name="PlaylistControllerPanel" Grid.Row="2" Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Primary Label:  Artist - Album - Title / Time Data -->
                <Border Grid.ColumnSpan="1" Grid.Row="0">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Artist - Album - Title -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Playlist.NowPlaying.Entry.PrimaryArtist}" Margin="5" FontSize="14" Foreground="Gray" />

                            <fa5:SvgAwesome Icon="Solid_Circle" Height="4" Width="4" VerticalAlignment="Center" Margin="5 0" />
                            
                            <TextBlock Text="{Binding Playlist.NowPlaying.Entry.Album}" Margin="5" FontSize="14" Foreground="Gray" />

                            <fa5:SvgAwesome Icon="Solid_Circle" Height="4" Width="4" VerticalAlignment="Center" Margin="5 0" />

                            <TextBlock Text="{Binding Playlist.NowPlaying.Entry.Title}" Margin="5" FontSize="14" Foreground="Gray" />
                        </StackPanel>

                        <!-- Time Data -->
                        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Playlist.NowPlayingCurrentTime, StringFormat=HH:mm:ss}" FontSize="14" Foreground="Gray" Margin="10 5" />
                            <TextBlock Text=" / " FontSize="14" Foreground="Gray" Margin="5 5" />
                            <TextBlock Text="{Binding Playlist.NowPlaying.Duration, StringFormat=HH:mm:ss}" FontSize="14" Foreground="Gray" Margin="10 5" />
                        </StackPanel>

                    </Grid>
                </Border>

                <!-- Scrubber (use margin of the ellipse to set the offset) -->
                <Border Grid.Row="1" Padding="10" Background="LightGray" CornerRadius="5">
                    <Grid>
                        <controls:ScrubberControl CurrentTime="{Binding Playlist.NowPlayingCurrentTime}"
												  TotalTime="{Binding Playlist.NowPlaying.Duration}" />
                    </Grid>
                </Border>

                <!-- Player Controls -->
                <Border Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Stretch">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Play / Stop / Pause / Prev / Next -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10 0">
                            <Button Cursor="Hand">
                                <fa5:SvgAwesome Icon="Solid_StepBackward" Height="16" Width="16" VerticalAlignment="Center" Margin="5 0" />
                            </Button>
                            <Button Cursor="Hand">
                                <fa5:SvgAwesome Icon="Solid_Pause" Height="16" Width="16" VerticalAlignment="Center" Margin="5 0" />
                            </Button>
                            <Button Cursor="Hand">
                                <fa5:SvgAwesome Icon="Solid_Play" Height="16" Width="16" VerticalAlignment="Center" Margin="5 0" />
                            </Button>
                            <Button Cursor="Hand">
                                <fa5:SvgAwesome Icon="Solid_Stop" Height="16" Width="16" VerticalAlignment="Center" Margin="5 0" />
                            </Button>
                            <Button Cursor="Hand">
                                <fa5:SvgAwesome Icon="Solid_StepForward" Height="16" Width="16" VerticalAlignment="Center" Margin="5 0" />
                            </Button>
                        </StackPanel>

                        <!-- Volume -->
                        <Border Grid.Column="1">
                            <controls:ScrubberUnitControl Padding="10"
														  Margin="5 0"
														  Background="LightGray"
														  CurrentOffset="{Binding Volume}"
														  VerticalAlignment="Center"
														  Width="250" />
                        </Border>

                    </Grid>
                </Border>

            </Grid>
        </Border>

        <!-- Output Messages (Status Panel) -->
        <Border Grid.Row="3" Height="300" Visibility="{Binding ShowOutputMessages, Converter={StaticResource BoolVisibilityCollapseConverter}}">
            <TabControl Background="White">

                <TabItem Header="Output" FontSize="14" Margin="0">

                    <ListBox x:Name="OutputLB" FontSize="14" Foreground="#555555" Background="White">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="3">
                                    <TextBlock Text="{Binding Message}" />
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </TabItem>

            </TabControl>
        </Border>

        <!-- Status Bar (Footer) -->
        <Border x:Name="StatusBorder" Grid.Row="4" Background="#EEEEEE">
            <TextBlock x:Name="StatusMessageTB" 
					   Text="{Binding StatusMessage}" 
					   FontSize="14" Margin="5" 
					   Foreground="#555555" VerticalAlignment="Center" />
        </Border>

    </Grid>
</UserControl>
