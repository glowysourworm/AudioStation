<UserControl x:Class="AudioStation.Views.AlbumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:fa5="http://schemas.fontawesome.com/icons/"    
             xmlns:local="clr-namespace:AudioStation.Views"
             xmlns:controls="clr-namespace:AudioStation.Controls">
    <Border Padding="10">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <controls:LibraryImageControl ImageFile="{Binding FileNameRef}"
				                          Height="200" Width="200" Grid.RowSpan="2"
				                          VerticalAlignment="Top" />

            <!-- Album Banner -->
            <Border Background="AliceBlue" Grid.Column="1">
                <Grid Margin="5 0 0 0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Artist}" HorizontalAlignment="Left" FontSize="16" Foreground="#555555" Margin="3 5" />
                        <fa5:SvgAwesome Icon="Solid_Circle" Width="3" Height="3" Foreground="#555555" Margin="10" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Album}" HorizontalAlignment="Left" FontSize="16" Foreground="#555555" Margin="3 5" />
                    </StackPanel>


                    <!-- Album Year / Genre / Other Details... -->
                    <TextBlock Text="{Binding Year}" HorizontalAlignment="Left" FontSize="12" Foreground="Gray" Grid.Row="1" Margin="3" />
                    <TextBlock Text="{Binding Duration}" HorizontalAlignment="Right" FontSize="12" Foreground="Gray" Grid.Row="1" Margin="3" />

                </Grid>
            </Border>

            <ItemsControl ItemsSource="{Binding Tracks}" AlternationCount="2"
					 Grid.Column="1" Grid.Row="1" Margin="10 0 0 0"
                     ScrollViewer.CanContentScroll="False"
					 Background="White">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel VirtualizingPanel.IsVirtualizing="False" HorizontalAlignment="Stretch" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border HorizontalAlignment="Stretch">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DFDFDFDF" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding Track}" Grid.Column="0" FontSize="12" Foreground="Gray" Margin="3" />
                                <TextBlock Text="{Binding Name}" Grid.Column="1" FontSize="12" Foreground="Gray" Margin="3" />
                                <TextBlock Text="{Binding Duration}" Grid.Column="2" FontSize="12" Foreground="Gray" Margin="3" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Grid>
    </Border>
</UserControl>
