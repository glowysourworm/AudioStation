<UserControl x:Class="AudioStation.Views.LibraryLoaderViews.LibraryLoaderImportFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:propertyGrid="clr-namespace:AudioStation.Controls.PropertyGrid"
             xmlns:controls="clr-namespace:AudioStation.Controls"
             xmlns:coreModel="clr-namespace:AudioStation.Core.Model;assembly=AudioStation.Core"
             xmlns:simpleUI="clr-namespace:SimpleWpf.UI.Controls;assembly=SimpleWpf.UI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Input Files -->
        <xceed:WatermarkTextBox Margin="5" 
                                Text="{Binding SourceFolderSearch, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                Watermark="Search Import Files..." 
                                HorizontalAlignment="Stretch" />

        <ListBox Grid.Row="1" Margin="5" x:Name="ImportLB"
                 ItemsSource="{Binding SourceFiles}"
                 MouseDoubleClick="ImportLB_MouseDoubleClick"
                 SelectedValuePath="IsSelected"
                 SelectionChanged="ImportLB_SelectionChanged"
                 SelectionMode="Extended"
                 AlternationCount="2"
                 ItemContainerStyle="{StaticResource HoverSelectItemContainerStyleWithAlternation_LibraryLoader}"
                 HorizontalContentAlignment="Stretch"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 VirtualizingPanel.CacheLength="3">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <ContextMenu.Template>
                        <ControlTemplate>
                            <Border CornerRadius="10"
                                    BorderBrush="Gray"
                                    BorderThickness="3"
                                    Background="White">
                                <StackPanel>
                                    <Button Style="{StaticResource UserMenuButtonStyle}" Content="Import (Basic)">
                                        <Button.Tag>
                                            <CornerRadius TopLeft="10" TopRight="10" />
                                        </Button.Tag>
                                    </Button>
                                    <Button Style="{StaticResource UserMenuButtonStyle}" Content="Import (Detail)" />
                                    <Button Style="{StaticResource UserMenuButtonStyle}" Command="{Binding EditTagsCommand}" Content="Edit Tag(s)" />
                                    <Button Style="{StaticResource UserMenuButtonStyle}" Content="Run AcoustID" />
                                    <Button Style="{StaticResource UserMenuButtonStyle}" Content="Run Music Brainz (Detail)">
                                        <Button.Tag>
                                            <CornerRadius BottomLeft="10" BottomRight="10" />
                                        </Button.Tag>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </ContextMenu.Template>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <ToggleButton x:Name="InputFileExpanderButton"
                                      Click="InputFileExpanderButton_Click"
                                      IsChecked="{Binding IsExpanded, Mode=TwoWay}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Grid Background="Transparent">
                                        <fa5:ImageAwesome Icon="Solid_PlusSquare"                                                     
                                                    Style="{StaticResource FontAwesomeIconManagerViewPager}"
                                                    Margin="3"
                                                    Visibility="{Binding IsExpanded, Converter={StaticResource BoolInverseVisibilityCollapseConverter}}" />

                                        <fa5:ImageAwesome Icon="Solid_MinusSquare"                                                     
                                                    Style="{StaticResource FontAwesomeIconManagerViewPager}"
                                                    Margin="3"
                                                    Visibility="{Binding IsExpanded, Converter={StaticResource BoolVisibilityCollapseConverter}}" />
                                    </Grid>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>                                      

                        <!-- Import Indicators -->
                        <StackPanel Orientation="Horizontal" Grid.Column="1">

                            <fa5:ImageAwesome Icon="Solid_Tag" 
                                            Margin="5"
                                            Style="{StaticResource FontAwesomeIconManagerViewPager}"
                                            ToolTip="Tag data is required to complete the import"                       
                                            Foreground="{Binding MinimumImportValid, 
                                                                 Converter={StaticResource ImportStepForegroundParameterConverter},
                                                                 ConverterParameter={x:Static Brushes.LawnGreen}}" />

                            <fa5:ImageAwesome Icon="Solid_VolumeUp" 
                                            Margin="5"
                                            Style="{StaticResource FontAwesomeIconManagerViewPager}"
                                            ToolTip="AcoustID data may be downloaded prior to import; or after."
                                            Foreground="{Binding ImportOutput.AcoustIDSuccess, 
                                                                 Converter={StaticResource ImportStepForegroundParameterConverter},
                                                                 ConverterParameter={x:Static Brushes.DodgerBlue}}" />
                            <fa5:ImageAwesome Icon="Solid_Music" 
                                            Margin="5"
                                            ToolTip="Music Brainz data may be downloaded prior to import; or after."              
                                            Style="{StaticResource FontAwesomeIconManagerViewPager}"
                                            Foreground="{Binding ImportOutput.MusicBrainzRecordingMatchSuccess, 
                                                                 Converter={StaticResource ImportStepForegroundParameterConverter},
                                                                 ConverterParameter={x:Static Brushes.DodgerBlue}}" />
                        </StackPanel>

                        <!-- Import File Name -->
                        <TextBlock Text="{Binding FileName}" 
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Grid.Column="2" />
                        
                        <!-- RHS Control Panel -->
                        <StackPanel Orientation="Horizontal" Grid.Column="3" Margin="3">
                            
                            <!-- Current Selection -->
                            <TextBlock Style="{StaticResource LabelDetailTextBlock}" Foreground="#FF555555" Margin="0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding SelectedAcoustIDResult, Converter={StaticResource NonNullVisibilityConverter}}">
                                <Run Text="AcoutID (" />
                                <Run Text="{Binding SelectedAcoustIDResult.Score, StringFormat=P2}" />
                                <Run Text=")" />
                            </TextBlock>
                            
                            <TextBlock Style="{StaticResource LabelDetailTextBlock}" Foreground="#FF555555" Margin="5 0 0 0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding SelectedMusicBrainzRecordingMatch, Converter={StaticResource NonNullVisibilityConverter}}">
                                <Run Text="Music Brainz (" />
                                <Run Text="{Binding SelectedMusicBrainzRecordingMatch.ShortString, Mode=OneWay}" />
                                <Run Text=")" />
                            </TextBlock>                            
                            
                            <!-- Select Buttons -->
                            <Button Style="{StaticResource UserControlButton}" 
                                    Command="{Binding SelectAcoustIDCommand}"
                                    Margin="5 0 0 0"
                                    Visibility="{Binding ImportOutput.AcoustIDSuccess, Converter={StaticResource BoolVisibilityCollapseConverter}}">
                                <StackPanel Orientation="Horizontal" Margin="1" VerticalAlignment="Center">
                                    <TextBlock Text="Select " VerticalAlignment="Center" FontSize="12" />
                                    <fa5:ImageAwesome Icon="Solid_VolumeUp" Style="{StaticResource FontAwesomeIconManagerViewPager}" Margin="5 0 0 0" />
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource UserControlButton}" 
                                    Command="{Binding SelectMusicBrainzCommand}"
                                    Margin="5 0 0 0"
                                    Visibility="{Binding ImportOutput.MusicBrainzRecordingMatchSuccess, Converter={StaticResource BoolVisibilityCollapseConverter}}">
                                <StackPanel Orientation="Horizontal" Margin="1" VerticalAlignment="Center">
                                    <TextBlock Text="Select " VerticalAlignment="Center" FontSize="12" />
                                    <fa5:ImageAwesome Icon="Solid_Music" Style="{StaticResource FontAwesomeIconManagerViewPager}" Margin="5 0 0 0" />
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource UserControlButton}" 
                                    Command="{Binding PlayAudioCommand}"
                                    Margin="5 0 0 0">
                                <fa5:ImageAwesome Icon="Solid_PlayCircle" 
                                                  Style="{StaticResource FontAwesomeIconManagerViewPager}" 
                                                  Margin="1" />
                            </Button>                            
                        </StackPanel>

                        <controls:NoScrollListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                                                  Margin="0"
                                                  AlternationCount="2" 
                                                  BorderThickness="1" 
                                                  ItemContainerStyle="{StaticResource PlainItemContainerStyleWithAlternation_LightGray}"
                                                  Visibility="{Binding IsExpanded, Converter={StaticResource BoolVisibilityCollapseConverter}}">
                            
                            <propertyGrid:PropertyLabelControl Margin="23 0 0 0" LabelColumnWidth="200" LabelText="File Name:" Value="{Binding FileFullPath}" ToolTip="{Binding FileFullPath}" />

                            <propertyGrid:PropertyLabelControl Margin="23 0 0 0" LabelColumnWidth="200" LabelText="File Name Migrated:" Value="{Binding FileMigrationFullPath}" 
                                                               Foreground="{Binding TagMinimumForImport, Converter={StaticResource ValidationForegroundParameterConverter}, ConverterParameter={StaticResource LabelForeground}}"
                                                               ToolTip="{Binding FileMigrationFullPath}" />

                            <propertyGrid:PropertyLabelControl Margin="23 0 0 0" LabelColumnWidth="200" LabelText="Import Type:" Value="{Binding ImportAsType}" />

                            <propertyGrid:PropertyLabelControl Margin="23 0 0 0" LabelColumnWidth="200" LabelText="Import Issues:" Value="{Binding TagIssues}"
                                                               Foreground="{Binding TagMinimumForImport, Converter={StaticResource ValidationForegroundParameterConverter}, ConverterParameter={StaticResource LabelForeground}}"
                                                               ToolTip="You can fill out the tag data here by selecting items; and editing their tags. This will allow Audio Station to fill in the required data. Other data may be entered later; and 3rd party services may be used at another time." />

                            <propertyGrid:PropertyLabelControl Margin="23 0 0 0" LabelColumnWidth="200" LabelText="AcoustID:" Value="{Binding ImportOutput.SelectedAcoustIDResult}"
                                                               Foreground="{Binding ImportOutput.AcoustIDSuccess, Converter={StaticResource ValidationForegroundParameterConverter}, ConverterParameter={StaticResource LabelForeground}}" />

                            <propertyGrid:PropertyLabelControl Margin="23 0 0 0" LabelColumnWidth="200" LabelText="Music Brainz:" Value="{Binding ImportOutput.SelectedMusicBrainzRecordingMatch}"
                                                               Foreground="{Binding ImportOutput.MusicBrainzRecordingMatchSuccess, Converter={StaticResource ValidationForegroundParameterConverter}, ConverterParameter={StaticResource LabelForeground}}" />
                        </controls:NoScrollListBox>
                        
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>
