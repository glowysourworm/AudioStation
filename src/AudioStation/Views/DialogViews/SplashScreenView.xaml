<UserControl x:Class="AudioStation.Views.DialogViews.SplashScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:AudioStation.Controls"
             Cursor="Wait">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Canvas Grid.RowSpan="3" Height="200" Width="300">
            <!--Canvas.OpacityMask>
                <RadialGradientBrush Center="0.5, 0.5" RadiusX="1" RadiusY="1.5">
                    <GradientStop Offset="0" Color="White" />
                    <GradientStop Offset="0.05" Color="#AFFFFFFF" />
                    <GradientStop Offset="0.1" Color="White" />
                    <GradientStop Offset="0.15" Color="#AFFFFFFF" />
                    <GradientStop Offset="0.2" Color="White" />
                    <GradientStop Offset="0.25" Color="#AFFFFFFF" />
                    <GradientStop Offset="0.3" Color="White" />
                    <GradientStop Offset="0.35" Color="#AFFFFFFF" />
                    <GradientStop Offset="0.4" Color="White" />
                    <GradientStop Offset="0.45" Color="#AFFFFFFF" />                    
                    <GradientStop Offset="0.5" Color="White" />
                    <GradientStop Offset="0.55" Color="#AFFFFFFF" />
                    <GradientStop Offset="0.6" Color="White" />
                    <GradientStop Offset="0.65" Color="#AFFFFFFF" />
                    <GradientStop Offset="0.7" Color="White" />
                    <GradientStop Offset="0.75" Color="#AFFFFFFF" />
                    <GradientStop Offset="0.8" Color="White" />
                    <GradientStop Offset="0.85" Color="#AFFFFFFF" />
                    <GradientStop Offset="0.9" Color="White" />
                    <GradientStop Offset="0.95" Color="White" />
                    <GradientStop Offset="1" Color="#AFFFFFFF" />                    
                </RadialGradientBrush>
            </Canvas.OpacityMask-->
            <Rectangle Canvas.Left="0" Canvas.Top="80" Width="30" Height="120"  Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="30" Canvas.Top="30" Width="30" Height="170" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="60" Canvas.Top="160" Width="30" Height="40" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="90" Canvas.Top="140" Width="30" Height="60" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="120" Canvas.Top="120" Width="30" Height="80" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="150" Canvas.Top="160" Width="30" Height="40" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="180" Canvas.Top="20" Width="30" Height="180" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="210" Canvas.Top="70" Width="30" Height="130" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="240" Canvas.Top="50" Width="30" Height="150" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
            <Rectangle Canvas.Left="270" Canvas.Top="160" Width="30" Height="40" Stroke="{StaticResource LoadingBarStroke}" StrokeThickness="1" Fill="{StaticResource LoadingBarFill}" />
        </Canvas>

        <TextBlock FontSize="18" Margin="10" Grid.Row="0"
                   Text="Audio Station" Style="{StaticResource LabelTextBlock}" Foreground="Black"
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" />

        <controls:ProgressBar Progress="{Binding Progress}" 
                              Visibility="{Binding ShowProgressBar, Converter={StaticResource BoolVisibilityCollapseConverter}}"
                              ProgressBrush="LawnGreen" 
                              Foreground="#FF555555"
                              Background="LightGray"
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"                              
                              Width="250" Height="24" Margin="5" Grid.Row="1" />

        <TextBlock FontSize="14" Margin="0 5" Grid.Row="2"
                   Visibility="{Binding ShowProgressMessage, Converter={StaticResource BoolVisibilityCollapseConverter}}"
                   Text="{Binding Message}" Style="{StaticResource LabelTextBlock}" Foreground="Black"
                   Width="300"
                   TextAlignment="Center"
                   TextWrapping="NoWrap"
                   TextTrimming="CharacterEllipsis"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" />
    </Grid>
</UserControl>
